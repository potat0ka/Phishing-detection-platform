# AI Phishing Detection Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Application Settings
FLASK_SECRET_KEY=your_random_secret_key_here_change_this_in_production

# Database Configuration - MongoDB Atlas (Cloud Database)
# Get this from your MongoDB Atlas dashboard under "Connect" -> "Connect your application"
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority

# Alternative: Local MongoDB (if running MongoDB locally)
# MONGODB_URI=mongodb://localhost:27017/phishing_detector

# User Data Encryption (for storing sensitive user information securely)
USER_ENCRYPTION_SECRET=your_encryption_key_here_change_this_in_production

# Email Configuration (Optional - for password reset emails)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# External API Keys (Optional - for enhanced threat detection)
# VIRUSTOTAL_API_KEY=your_virustotal_api_key_here
# URLVOID_API_KEY=your_urlvoid_api_key_here

# Application Settings
DEBUG=True
PORT=8080
HOST=0.0.0.0