# AI Phishing Detection Platform - Environment Variables
# Copy this file to .env and fill in your values

# Session Management (Required for login/logout)
SESSION_SECRET=your_secret_key_here_min_32_characters

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration (Optional - uses JSON fallback by default)
# DATABASE_URL=mongodb://localhost:27017/phishing_detector

# Security Settings
USER_ENCRYPTION_SECRET=your_encryption_key_here_min_32_characters

# Application Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Port Configuration (Optional - defaults to 8080)
PORT=8080